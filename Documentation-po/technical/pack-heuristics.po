#. type: Plain text
#: ../Documentation/technical/pack-heuristics.txt:73
msgid "The traditional insight:"
msgstr ""

#. type: Plain text
#: ../Documentation/technical/pack-heuristics.txt:75
#, no-wrap
msgid "    <pasky> yes\n"
msgstr ""

#. type: Plain text
#: ../Documentation/technical/pack-heuristics.txt:77
